{
    "manifest_version": 2,
    "name": "Utils",
    "version": "1.0",

    "description": "This extension is a personal utilitary one for some tasks I do in a regular basis.",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_title": "Utils"
        // "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
        "activeTab",
        "https://www.facebook.com/saved/?cref=28/&collection_token=*"
    ]
}